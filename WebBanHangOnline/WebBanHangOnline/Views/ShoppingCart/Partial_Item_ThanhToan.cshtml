@model IEnumerable<WebBanHangOnline.Models.ShoppingCartItem>
@using WebBanHangOnline.Common

<style>
    .logo_container a {
        font-size: 35px;
        color: #1e1e27;
        font-weight: 700;
        text-transform: uppercase;
    }

    .top_nav {
        width: 100%;
        height: 50px;
        background: #FFFFFF;
    }

    .top_nav_left {
        height: 50px;
        line-height: 50px;
        font-size: 15px;
        color: black;
        text-transform: uppercase;
    }

    .account {
        display: inline-block;
        position: relative;
        min-width: 50px;
        padding-left: 20px;
        text-align: center;
        vertical-align: middle;
        background: #FFFFFF;
    }

        .account > a {
            display: block;
            color: black;
            font-weight: 400;
            height: 50px;
            line-height: 50px;
            font-size: 15px;
        }

    .newsletter_submit_btn {
        width: 160px;
        height: 46px;
        border: none;
        background: black;
        color: #FFFFFF;
        font-size: 14px;
        font-weight: 500;
        text-transform: uppercase;
        cursor: pointer;
    }

        .newsletter_submit_btn:hover {
            background: #51545f;
        }
</style>

@if (Model != null && Model.Any())
{
    <h3>GIỎ HÀNG <span style="float:right;position:relative"><small>@Model.Count()</small></span></h3>
    var i = 0;
    var tongtien = decimal.Zero;
    <div style="border:1px solid #808080;">
        <table class="table">
            @foreach (var item in Model)
            {
                tongtien += item.TotalPrice;
                <tr>
                    <td>
                        <a href="/chi-tiet/@item.Alias-p@(item.ProductID)">
                            @item.ProductName
                        </a>
                    </td>
                    <td>@Common.FormatNumber(item.Price, 0)</td>
                </tr>
            }
            <tr>
                <td>Tổng tiền</td>
                <td>@Common.FormatNumber(tongtien, 0)</td>
            </tr>
        </table>
    </div>

}
else
{

}
